<Window x:Class="SmartStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartStudy" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock FontSize="18" FontWeight="Bold" Text="Subjects" Margin="0,0,0,10"/>
            <ListBox Name="SubjectsListBox" DisplayMemberPath="SubjectName" Height="150"/>

            <TextBlock FontSize="18" FontWeight="Bold" Text="Scores" Margin="0,20,0,10"/>
            <ListBox Name="ScoresListBox" DisplayMemberPath="TestName" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
